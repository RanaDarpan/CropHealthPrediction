# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/agrisense
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/agrisense

# JWT Secret (Generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Server Configuration
PORT=5000
NODE_ENV=development

# OpenWeather API (Required)
# Sign up at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Sentinel Hub (Optional - for satellite imagery)
# Sign up at: https://www.sentinel-hub.com/
SENTINEL_HUB_CLIENT_ID=your_sentinel_client_id
SENTINEL_HUB_CLIENT_SECRET=your_sentinel_client_secret
SENTINEL_HUB_INSTANCE_ID=your_sentinel_instance_id

# ML Service URL
ML_SERVICE_URL=http://localhost:5001

# Google Earth Engine (Optional - for live Sentinel-2 data)
# Create a service account at: https://console.cloud.google.com/
# Enable Earth Engine API and register the service account at: https://signup.earthengine.google.com/#!/service_accounts
GEE_SERVICE_ACCOUNT_EMAIL=your_service_account@project.iam.gserviceaccount.com
GEE_KEY_FILE=../ml-service/gee-service-account.json

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
